[max-line-length]
max-line-length = 88

[ignore]
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
ignore = E203, W503

[exclude]
# Exclude common directories
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    venv,
    .venv
